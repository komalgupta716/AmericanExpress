<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:columnCount="3">

    <RelativeLayout
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"
            android:src="@drawable/a1" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:singleLine="false"
            android:text="Accounts and Deposits" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"

            android:src="@drawable/a2" />

        <TextView

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Fund Transfer" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"

            android:src="@drawable/a3" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Recharge" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"

            android:src="@drawable/a4" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Bill Payment and Reminders" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="16dp"
        android:id="@+id/venues">

        <ImageView
            android:id="@+id/image_5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"
            android:src="@drawable/a5" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/image_5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Venues Accepted" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"

            android:src="@drawable/a6" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_6"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Cards,Loans and Forex" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="16dp"
        android:id="@+id/online">

        <ImageView
            android:id="@+id/image_7"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"


            android:src="@drawable/a7" />

        <TextView
            android:layout_width="90dp"

            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_7"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Online Shopping and Offers" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_8"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"

            android:src="@drawable/a8" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_8"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Investment, Insurance and Tax Payment" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_9"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"

            android:src="@drawable/a9" />

        <TextView
            android:layout_width="90dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_9"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Services" />
    </RelativeLayout>

    
</GridLayout>